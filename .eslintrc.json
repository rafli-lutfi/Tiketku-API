{
    "env": {
        "browser": true,
        "node": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": 0,
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-duplicate-imports": [
            "warn"
        ],
        "no-unreachable": [
            "warn"
        ],
        "no-unused-vars": [
            "error"
        ],
        "no-var": [
            "warn"
        ]
    }
}